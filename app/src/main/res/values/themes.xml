<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Cat_Hackathon" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowSplashScreenBackground" tools:targetApi="s">@color/primary_blue</item>
        <item name="android:windowSplashScreenAnimatedIcon" tools:targetApi="s">@drawable/logo</item>
        <item name="android:windowSplashScreenAnimationDuration" tools:targetApi="s">400</item>
        <item name="fontFamily">@font/crimson_text_regular</item>
    </style>

    <style name="Theme.Cat_Hackathon" parent="Base.Theme.Cat_Hackathon" />


    <style name="TabLayoutTextStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
  </style>
    <style name="textView_Auth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/crimson_text_semi_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_auth</item>
        <item name="android:layout_marginStart">@dimen/margin_auth_start</item>
        <item name="android:layout_marginTop">@dimen/textView_auth_margin_top</item>
    </style>
    <style name="editView_Auth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">55dp</item>
        <item name="fontFamily">@font/crimson_text_semi_bold</item>
        <item name="android:textColorHint">@color/editText_hint_auth</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_auth_start</item>
        <item name="android:layout_marginTop">@dimen/editView_auth_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_auth_start</item>
        <item name="android:paddingHorizontal">@dimen/editView_auth_padding</item>
    </style>
    <style name="imageView_Auth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:layout_marginBottom">15dp</item>
    </style>
    <style name="textView_account_Auth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/crimson_text_semi_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/text_auth</item>
        <item name="android:layout_marginStart">@dimen/margin_auth_start</item>
        <item name="android:layout_marginTop">@dimen/textView_auth_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/text_account_auth_margin_bottom</item>
    </style>
    <style name="button_Auth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">@dimen/button_auth_margin_start_end</item>
        <item name="android:layout_marginTop">@dimen/button_auth_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/button_auth_margin_start_end</item>
        <item name="android:paddingTop">@dimen/button_auth_padding_top</item>
        <item name="android:paddingBottom">@dimen/button_auth_padding_bottom</item>
    </style>
    <style name="layout_account_Auth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/layout_have_account_auth_margin_top</item>
    </style>
    <style name="textView_have_account_Auth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/crimson_text_semi_bold</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#979797</item>
    </style>

    <style name="password_editView_Auth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/crimson_text_semi_bold</item>
        <item name="android:textColorHint">@color/editText_hint_auth</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginTop">@dimen/editView_auth_margin_top</item>
        <item name="android:paddingHorizontal">@dimen/editView_auth_padding</item>
    </style>
    <style name="password_layout_Auth" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">@dimen/margin_auth_start</item>
        <item name="android:layout_marginTop">@dimen/editView_auth_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/margin_auth_start</item>
    </style>

    <style name="roundedImageViewRounded">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>