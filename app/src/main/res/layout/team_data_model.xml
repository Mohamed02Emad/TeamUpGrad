<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="20dp"
    android:paddingBottom="20dp"
    android:background="@drawable/team_model_background">

    <TextView
        android:id="@+id/teamName_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/teams"
        android:fontFamily="@font/crimson_text_semi_bold"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamNum_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crimson_text_semi_bold"
        android:text="@string/team_num"
        android:textSize="21sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/teamDescription_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/crimson_text_regular"
        android:text="@string/team_description"
        android:textColor="@color/team_description"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/teamName_textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="69dp"
        android:layout_height="28dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/view_button_background"
        android:textSize="12sp"
        android:fontFamily="@font/crimson_text_semi_bold"
        android:text="@string/View"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamDescription_textView" />


</androidx.constraintlayout.widget.ConstraintLayout>